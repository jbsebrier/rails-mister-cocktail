<h1><%=@cocktail.name%></h1>


<h2>Ingredients:</h2>


<ul>
  <% @doses.each do |dose| %>
    <li> <%= dose.description %> of <%=dose.ingredient.name %> <%= link_to "remove", cocktail_dose_path(@cocktail, dose), method: :delete %> </li>
  <% end %>
</ul>


<h3>Add an ingredient:</h3>

<div class="wrapper">
  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.error_notification %>
          <%= f.input :description %>
          <%= f.input :ingredient_id, collection: Ingredient.all %>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>





<%= link_to "Back to cocktail list", cocktails_path %>
